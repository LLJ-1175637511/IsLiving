<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_img_supple_doing"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_baseline_help_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_tittle_supple_doing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/iv_img_supple_doing"
                app:layout_constraintTop_toTopOf="@+id/iv_img_supple_doing" />

            <TextView
                android:id="@+id/bt_supplementing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btn_login"
                android:padding="8dp"
                android:text="@string/supplementing"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_img_supple_doing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_img_supple_doing" />

            <TextView
                android:id="@+id/tv_name_supple_doing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="姓名：钱某某"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/bt_supplementing"
                app:layout_constraintStart_toStartOf="@+id/item_tittle_supple_doing"
                app:layout_constraintTop_toBottomOf="@+id/item_tittle_supple_doing" />

            <TextView
                android:id="@+id/tv_id_num_supple_doing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:text="身份证：35135135135"
                android:textColor="@color/grey"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_img_supple_doing"
                app:layout_constraintEnd_toStartOf="@+id/bt_supplementing"
                app:layout_constraintStart_toStartOf="@+id/tv_name_supple_doing"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_supple_doing" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>